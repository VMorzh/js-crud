<section class="purchase-info">
  <div class='form'>
    {{#with data}}
    <div class='purchase-item block'>
      <span class='title'>ID:</span>
      <span class='text'>{{id}}</span>
    </div>
    {{> divider}}
    <div class='purchase-item'>
      <div class="purchase-item__block">
        <span class='title'>Iм'я:</span>
        <span class='text'>{{firstname}}</span>
      </div>
      <div class='purchase-item__block'>
        <span class='title'>Прізвище:</span>
        <span class='text'>{{lastname}}</span>
      </div>
    </div>
  </div>
  {{/with}}
</section>

